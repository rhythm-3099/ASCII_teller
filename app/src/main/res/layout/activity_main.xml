<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#57606f"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:text="ASCII Helper"
        android:textColor="#dfe4ea"
        android:textSize="53sp"
        android:layout_margin="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.85"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="ASCII to Character"
            android:textSize="30sp"
            android:textColor="#57606f"
            android:background="#dfe4ea"
            android:id="@+id/ascii"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#57606f"
            android:textSize="30sp"
            android:background="#dfe4ea"
            android:text="Character to ascii"
            android:id="@+id/character"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#57606f"
            android:textSize="30sp"
            android:background="#dfe4ea"
            android:text="ASCII table"
            android:id="@+id/table"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="#dfe4ea">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="#dfe4ea"
                android:text="Info"
                android:id="@+id/info"
                android:textSize="24sp"
                android:textColor="#57606f"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="#dfe4ea"
                android:text="Exit"
                android:textColor="#57606f"
                android:textSize="24sp"
                android:id="@+id/quit"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>